{
  "rewrites": [
    { "source": "/api/generate", "destination": "/api/generate" },
    { "source": "/api/info", "destination": "/api/index" },
    { "source": "/api", "destination": "/api/index" },
    { "source": "/health", "destination": "/api/health" },
    { "source": "/today-laptop", "destination": "/api/today-laptop" },
    { "source": "/today-mobile", "destination": "/api/today-mobile" },
    { "source": "/iphone-lock", "destination": "/api/iphone-lock" },
    { "source": "/font-debug", "destination": "/api/font-debug" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
